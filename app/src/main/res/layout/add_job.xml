<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B2196F3"
    android:orientation="vertical"
    tools:context=".addJobActivity">


    <TextView
        android:id="@+id/addjobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addjobtitle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addJobsPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/addjobPosition"
        android:inputType="text" />

    <EditText
        android:id="@+id/addJobsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/addjobDescription"
        android:inputType="text" />

    <EditText
        android:id="@+id/addJobsSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/addjobsalary"
        android:inputType="number" />

    <EditText
        android:id="@+id/addJobsRequirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/addjobrequirement"
        android:inputType="text" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/addjobbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="@string/addbtn" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backbtn" />


</LinearLayout>